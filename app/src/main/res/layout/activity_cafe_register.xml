<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@null"
        android:src="@drawable/ic_launcher_foreground"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카페 등록하기"
        android:gravity="center"
        android:textSize="40sp"
        android:layout_gravity="center"
        android:background="@android:color/holo_blue_light"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="카페 이름 : "
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/editText_cafe_name"
            android:hint="ex) OOO카페 아주대점"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <Button
        android:id="@+id/button_check_cafe_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="지도로 카페 검색"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="사업자 등록 번호 : "
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/editText_business_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>


    <Button
        android:id="@+id/button_cam_business_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사업자 등록증 인증"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        />
    <Button
        android:id="@+id/button_check_business_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사업자 등록 번호 확인"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="카페 주소 : "
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/editText_cafe_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="여기에 카페 이름을 검색하세요"
            />
    </LinearLayout>

    <Button
        android:id="@+id/button_register_cafe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카페 등록"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        />

</LinearLayout>
