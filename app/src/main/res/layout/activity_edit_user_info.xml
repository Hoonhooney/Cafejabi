<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@null"
        android:src="@drawable/ic_launcher_foreground"
        ></ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원 정보 수정"
        android:gravity="center"
        android:textSize="50sp"
        android:layout_gravity="center"
        android:background="@android:color/holo_blue_light"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        > <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textSize="20sp"
        />

        <EditText
            android:id="@+id/editText_edit_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            />
    </LinearLayout>

    <Button
        android:id="@+id/button_edit_check_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="닉네임 중복 확인"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="직업"
            android:textSize="20sp"
            android:layout_marginEnd="10dp"/>

        <RadioGroup
            android:id="@+id/rg_edit_jobs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_edit_student"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="true"
                android:text="학생"
                android:textSize="20sp" />
            <RadioButton
                android:id="@+id/rb_edit_worker"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="true"
                android:text="직장인"
                android:textSize="20sp" />
            <RadioButton
                android:id="@+id/rb_edit_none"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="true"
                android:text="무직"
                android:textSize="20sp" />

        </RadioGroup>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목적"
            android:layout_marginEnd="10dp"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkBox_edit_study"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:text="공부"
            android:textSize="20sp" />
        <CheckBox
            android:id="@+id/checkBox_edit_rest"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:text="휴식"
            android:textSize="20sp" />
        <CheckBox
            android:id="@+id/checkbox_edit_mood"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:text="사진"
            android:textSize="20sp" />

    </LinearLayout>


    <Button
        android:id="@+id/button_edit_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        />

</LinearLayout>

