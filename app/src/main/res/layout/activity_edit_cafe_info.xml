<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/holo_blue_light"
                android:gravity="center"
                android:text="카페 관리"
                android:textSize="40sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_search_cafe_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최근 좌석 업데이트 시간 : "
                    ></TextView>


                <TextView
                    android:id="@+id/textView_info_last_updated_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최근업데이트시간"
                    ></TextView>



            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="좌석 업데이트"
                android:textSize="20dp"
                ></TextView>

            <RadioGroup
                android:id="@+id/radioGroup_set_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/rb_table_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1단계" />

                <RadioButton
                    android:id="@+id/rb_table_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2단계" />

                <RadioButton
                    android:id="@+id/rb_table_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3단계" />

                <RadioButton
                    android:id="@+id/rb_table_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4단계" />


                <RadioButton
                    android:id="@+id/rb_table_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5단계" />
            </RadioGroup>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="내 카페 소개하기"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editText_cafe_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="영업 시간"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/checkbox_full_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24시간 영업" />

            <me.bendik.simplerangeview.SimpleRangeView
                android:id="@+id/rangeSeekBar_set_working_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:activeLabelColor="@color/colorPrimary"
                app:activeLineColor="@color/colorPrimary"
                app:activeThumbColor="@color/colorPrimary"
                app:activeThumbLabelColor="@color/colorPrimary"
                app:count="18"
                app:labelColor="#808080"
                app:labelFontSize="13sp"
                app:labelMarginBottom="16dp"
                app:movable="true" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="푸쉬 알림 허용 시간"
                android:textSize="20sp" />



            <CheckBox
                android:id="@+id/checkBox_alarm_same_working_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="영업시간과 동일" />

            <me.bendik.simplerangeview.SimpleRangeView
                android:id="@+id/rangeSeekBar_set_alarm_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:activeLabelColor="@color/colorPrimary"
                app:activeLineColor="@color/colorPrimary"
                app:activeThumbColor="@color/colorPrimary"
                app:activeThumbLabelColor="@color/colorPrimary"
                app:count="18"
                app:labelColor="#808080"
                app:labelFontSize="13sp"
                app:labelMarginBottom="16dp"
                app:movable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="푸쉬 알림 간격"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/radioGroup_set_alarm_gap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_gap_15min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15분" />

                <RadioButton
                    android:id="@+id/rb_gap_30min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30분" />

                <RadioButton
                    android:id="@+id/rb_gap_60min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1시간" />

                <RadioButton
                    android:id="@+id/rb_gap_120min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2시간" />

            </RadioGroup>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="카페 키워드 설정"
                android:textSize="20sp" />

            <org.apmem.tools.layouts.FlowLayout
                android:id="@+id/flowLayout__cafe_keywords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <Button
                android:id="@+id/button_edit_finish_cafe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="카페 설정"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
