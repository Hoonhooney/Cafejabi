<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="카페 관리"
                android:textSize="50sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="최근 좌석 업데이트 시간 : "></TextView>


                <TextView
                    android:id="@+id/textView_info_last_updated_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="최근업데이트시간"></TextView>


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="좌석 업데이트"
                android:textSize="20dp"
                android:layout_marginTop="10dp"></TextView>

            <RadioGroup
                android:id="@+id/radioGroup_set_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_table_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="매우한산" />

                <RadioButton
                    android:id="@+id/rb_table_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="한산" />

                <RadioButton
                    android:id="@+id/rb_table_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보통" />

                <RadioButton
                    android:id="@+id/rb_table_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="혼잡" />


                <RadioButton
                    android:id="@+id/rb_table_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="매우혼잡" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카페 이름 : "
                    android:textSize="15sp"
                    ></TextView>

                <EditText
                    android:id="@+id/editText_cafe_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    ></EditText>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="내 카페 소개하기"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editText_cafe_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLines="5" />

            <org.apmem.tools.layouts.FlowLayout
                android:id="@+id/flowLayout_keywords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="영업 시간 설정"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="월요일"
                        android:textSize="15dp"
                        ></TextView>

                    <CheckBox
                        android:id="@+id/cb_monday_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24시 영업  "
                        android:textSize="15dp"
                        ></CheckBox>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open Time"
                        android:textSize="15dp"
                        ></TextView>

                    <EditText
                        android:id="@+id/ET_monday_open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        ></EditText>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Close Time"
                        android:textSize="15dp"
                        ></TextView>

                    <EditText
                        android:id="@+id/ET_monday_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        ></EditText>

                    <CheckBox
                        android:id="@+id/cb_monday_rest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="휴무"
                        android:textSize="15dp"
                        ></CheckBox>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="화요일"
                        android:textSize="15dp"
                        ></TextView>

                    <CheckBox
                        android:id="@+id/cb_tuesday_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24시 영업  "
                        android:textSize="15dp"
                        ></CheckBox>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open Time"
                        android:textSize="15dp"
                        ></TextView>

                    <EditText
                        android:id="@+id/ET_tuesday_open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        ></EditText>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Close Time"
                        android:textSize="15dp"
                        ></TextView>

                    <EditText
                        android:id="@+id/ET_tuesday_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        ></EditText>


                    <CheckBox
                        android:id="@+id/cb_tuesday_rest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="휴무"
                        android:textSize="15dp"
                        ></CheckBox>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수요일"
                        android:textSize="15dp"
                        ></TextView>

                    <CheckBox
                        android:id="@+id/cb_wednesday_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24시 영업  "
                        android:textSize="15dp"
                        ></CheckBox>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open Time"
                        android:textSize="15dp"
                        ></TextView>

                    <EditText
                        android:id="@+id/ET_wednesday_open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        ></EditText>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Close Time"
                        android:textSize="15dp"
                        ></TextView>

                    <EditText
                        android:id="@+id/ET_wednesday_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        ></EditText>


                    <CheckBox
                        android:id="@+id/cb_wednesday_rest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="휴무"
                        android:textSize="15dp"
                        ></CheckBox>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="목요일"
                        android:textSize="15dp"
                        ></TextView>

                    <CheckBox
                        android:id="@+id/cb_thursday_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24시 영업  "
                        android:textSize="15dp"
                        ></CheckBox>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open Time"
                        android:textSize="15dp"
                        ></TextView>

                    <EditText
                        android:id="@+id/ET_thursday_open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        ></EditText>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Close Time"
                        android:textSize="15dp"
                        ></TextView>

                    <EditText
                        android:id="@+id/ET_thursday_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        ></EditText>

                    <CheckBox
                        android:id="@+id/cb_thursday_rest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="휴무"
                        android:textSize="15dp"
                        ></CheckBox>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="금요일"
                        android:textSize="15dp"
                        ></TextView>

                    <CheckBox
                        android:id="@+id/cb_friday_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24시 영업  "
                        android:textSize="15dp"
                        ></CheckBox>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open Time"
                        android:textSize="15dp"
                        ></TextView>

                    <EditText
                        android:id="@+id/ET_friday_open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        ></EditText>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Close Time"
                        android:textSize="15dp"
                        ></TextView>

                    <EditText
                        android:id="@+id/ET_friday_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        ></EditText>


                    <CheckBox
                        android:id="@+id/cb_friday_rest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="휴무"
                        android:textSize="15dp"
                        ></CheckBox>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="토요일"
                        android:textSize="15dp"
                        ></TextView>

                    <CheckBox
                        android:id="@+id/cb_saturday_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24시 영업  "
                        android:textSize="15dp"
                        ></CheckBox>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open Time"
                        android:textSize="15dp"
                        ></TextView>

                    <EditText
                        android:id="@+id/ET_saturday_open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        ></EditText>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Close Time"
                        android:textSize="15dp"
                        ></TextView>

                    <EditText
                        android:id="@+id/ET_saturday_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        ></EditText>


                    <CheckBox
                        android:id="@+id/cb_saturday_rest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="휴무"
                        android:textSize="15dp"
                        ></CheckBox>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="일요일"
                        android:textSize="15dp"
                        ></TextView>

                    <CheckBox
                        android:id="@+id/cb_sunday_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24시 영업  "
                        android:textSize="15dp"
                        ></CheckBox>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open Time"
                        android:textSize="15dp"
                        ></TextView>

                    <EditText
                        android:id="@+id/ET_sunday_open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        ></EditText>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Close Time"
                        android:textSize="15dp"
                        ></TextView>

                    <EditText
                        android:id="@+id/ET_sunday_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        ></EditText>

                    <CheckBox
                        android:id="@+id/cb_sunday_rest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="휴무"
                        android:textSize="15dp"
                        ></CheckBox>

                </LinearLayout>


            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="푸쉬 알림 허용 스위치"
                android:textSize="20sp" />


            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="     On/Off"
                android:textSize="13sp"
                android:switchMinWidth="30dp"
                android:gravity="center"
                ></Switch>


            <me.bendik.simplerangeview.SimpleRangeView
                android:id="@+id/rangeSeekBar_set_alarm_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:activeLabelColor="@color/colorPrimary"
                app:activeLineColor="@color/colorPrimary"
                app:activeThumbColor="@color/colorPrimary"
                app:activeThumbLabelColor="@color/colorPrimary"
                app:count="18"
                app:labelColor="#808080"
                app:labelFontSize="13sp"
                app:labelMarginBottom="16dp"
                app:movable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="푸쉬 알림 간격"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/radioGroup_set_alarm_gap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_gap_15min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15분" />

                <RadioButton
                    android:id="@+id/rb_gap_30min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30분" />

                <RadioButton
                    android:id="@+id/rb_gap_60min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1시간" />

                <RadioButton
                    android:id="@+id/rb_gap_120min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2시간" />

            </RadioGroup>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="카페 키워드 설정"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/radioGroup_keyword_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_keyword_list1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="콘센트 제공" />

                <RadioButton
                    android:id="@+id/rb_keyword_list2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="공부" />

                <RadioButton
                    android:id="@+id/rb_keyword_list3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="디저트" />

                <RadioButton
                    android:id="@+id/rb_keyword_list4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="대규모" />

                <RadioButton
                    android:id="@+id/rb_keyword_list5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="분위기" />

            </RadioGroup>


            <Button
                android:id="@+id/button_register_cafe"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="카페 설정"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
