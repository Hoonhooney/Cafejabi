<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout_bottom_info"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/border_layout"
    android:elevation="3dp"
    android:padding="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:id="@+id/textView_info_cafename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cafe Name"
                        android:textSize="20sp"
                        android:textColor="#303030"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/textView_info_cafenaddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cafe Address"
                        android:textColor="#707070" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/liking_cafe_list_checkbox"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:background="@drawable/heart_noncheck"
                    android:layout_alignParentEnd="true"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/textView_info_cafeseats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="'?/?'"
                    android:textSize="17sp" />



                <TextView
                    android:id="@+id/textView_info_last_updated_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#707070"
                    android:text="last updated time"
                    android:layout_marginStart="10dp"
                    />

            </LinearLayout>

            <org.apmem.tools.layouts.FlowLayout
                android:id="@+id/flowLayout_info_keywords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textView_info_cafedescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cafe Description"
                android:textSize="15sp"
                android:textColor="#303030"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>