<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@drawable/ic_launcher_foreground"/>

            <TextView
                android:id="@+id/textView_info_customer_cafename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="카페 이름"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/textView_info_customer_cafeaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="카페 주소"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/textView_info_customer_cafestatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="카페 혼잡도"
                android:gravity="center"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/textView_info_customer_cafeinfo"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="관리자가 쓴 카페 소개 데이터"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="운영 시간 : "
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/textView_info_customer_workingtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ? ~ ?"
                    android:textSize="20sp"/>

            </LinearLayout>

            <org.apmem.tools.layouts.FlowLayout
                android:id="@+id/flowLayout_info_customer_keywords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="댓글"
                android:textSize="20sp"
            ></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText_info_customer_comment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"/>
            </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ></ListView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
